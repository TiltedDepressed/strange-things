<Application x:Class="FitnessWpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FitnessWpfApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

       
        
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>

        <Style TargetType="Control" x:Key="MainControl">
            <Setter Property="Width" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource MainControl}"></Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MainControl}">
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource MainControl}"></Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MainControl}">
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource MainControl}"></Style>



    </Application.Resources>
</Application>
